<% form_for @search do |s| %>
  <h1>Advanced Reporting</h1>
    <label><%= t("date_range") %></label><br />
    <div class="yui-g date-range-filter">
      <div class="yui-u sub-field first">
        <%= s.unobtrusive_date_text_picker :created_at_after %><br />
        <label class="sub"><%= t("start") %></label>
      </div>
      <div class="yui-u sub-field">
        <%= s.unobtrusive_date_text_picker :created_at_before %><br />
        <label><%= t("stop") %></label>
      </div>
    </div>
    <%= radio_button_tag("advanced_reporting[split]", "daily", true) %>Daily<br />
    <%= radio_button_tag("advanced_reporting[split]", "weekly") %>Weekly<br />
    <%= radio_button_tag("advanced_reporting[split]", "monthly") %>Monthly<br />

    <% if @stores -%>
    Stores: dropdown for stores
    <% end -%>
    Products: <%= collection_select(:advanced_reporting, :product, @products, :id, :name, { :include_blank => 'All' } ) %> 

    <p><%= button t("search") %></p>
<% end %>
