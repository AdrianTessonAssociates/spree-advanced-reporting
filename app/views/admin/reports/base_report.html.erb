<% content_for :sidebar do %>
  <%= render :partial => 'admin/reports/advanced_report_criteria', :locals => {} %>
<% end %>

<h1><%= @report_name %></h1>

<%= @report.product_text %>
<%= @report.date_text %><br />
Total: <%= @report.total %>
<% if false -%>Download Data: <a href="/downloadable">Downloadable</a><% end -%>

<table width="100%" cellpadding="0" cellspacing="0" class="show_data">
  <tr>
    <% @report.increments.each do |inc| %>
    <td width="25%" <%= 'class="selected"' if inc == :daily %> id="<%= inc.to_s %>">
      <%= inc.to_s.capitalize %><br />
      <a href="<%= @report.download_url(request.request_uri, 'pdf', inc.to_s) %>">Download PDF</a><br />
      <a href="<%= @report.download_url(request.request_uri, 'csv', inc.to_s) %>">Download CSV</a>
    </td>
    <% end -%>
  </tr>  
</table>
<% @report.increments.each do |type| -%>
<div id="<%= type.to_s %>_data" <%= 'style="display:none;"' if type.to_s != 'daily' %> class="advanced_reporting_data">
<div id="<%= type.to_s %>_chart"></div>
<%= @report.ruportdata[type].to_html %>
</div>
<% end -%>

<% content_for :head do -%>
<script type="text/javascript">
google.setOnLoadCallback(drawChart);
      
function drawChart() {
	<% @report.increments.each do |type| -%>
        var data_<%= type.to_s %> = new google.visualization.DataTable();
        data_<%= type.to_s %>.addColumn('string', 'Display');
        data_<%= type.to_s %>.addColumn('number', '<%= @report_name %>');
        data_<%= type.to_s %>.addRows(<%= @report.ruportdata[type].size %>);
	<% @report.ruportdata[type].each_with_index do |p, i| %>
        data_<%= type.to_s %>.setValue(<%= i.to_s %>, 0, "<%= p.data[type.to_s.capitalize] %>");
        data_<%= type.to_s %>.setValue(<%= i.to_s %>, 1, <%= p.data[@report_name].to_s.gsub(/^\$/, '') %>);
        <% end -%>
        var chart_<%= type.to_s %> = new google.visualization.ColumnChart(document.getElementById('<%= type.to_s %>_chart'));
        chart_<%= type.to_s %>.draw(data_<%= type.to_s %>, {
		width: 800,
		height: 400,
		legend : 'none',
		title: '<%= type.to_s.capitalize + ' ' + @report_name %>' });
        <% end -%> 
	
}
</script>
<% end -%>
